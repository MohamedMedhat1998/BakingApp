<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/video_text_background"
    android:layout_height="match_parent"
    android:id="@+id/widget_layout"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_widget_icon1"
                android:layout_width="@dimen/widget_icon_size"
                android:layout_height="@dimen/widget_icon_size"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/widget_margin"
                android:layout_marginStart="@dimen/widget_margin"
                app:srcCompat="@drawable/chef" />

            <TextView
                android:id="@+id/tv_widget_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:gravity="center"
                android:text="Label"
                android:textColor="@color/black"
                android:theme="@style/TextLabel" />

            <ImageView
                android:id="@+id/iv_widget_icon2"
                android:layout_width="@dimen/widget_icon_size"
                android:layout_height="@dimen/widget_icon_size"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/widget_margin"
                android:layout_marginRight="@dimen/widget_margin"
                app:srcCompat="@drawable/chef" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_widget_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/widget_body_margin"
            android:layout_marginTop="@dimen/widget_body_margin"
            android:text="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>